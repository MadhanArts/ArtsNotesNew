<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/record_dialog_title"

        android:text="Record Dialog"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_dialog_record_timer"

        android:layout_marginTop="20dp"
        android:textSize="30sp"

        app:layout_constraintTop_toBottomOf="@+id/record_dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/record_dialog_record_button"

        android:layout_marginTop="20dp"

        android:padding="8dp"

        android:src="@drawable/record_btn_stopped"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"


        app:layout_constraintTop_toBottomOf="@+id/record_dialog_record_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_dialog_save_button"
        android:text="save"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_dialog_record_button"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/record_dialog_cancel_button"

        android:layout_marginEnd="10dp"

        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"

        app:layout_constraintEnd_toStartOf="@+id/record_dialog_save_button"
        app:layout_constraintTop_toTopOf="@+id/record_dialog_save_button"
        app:layout_constraintBottom_toBottomOf="@+id/record_dialog_save_button"

        android:text="cancel"


        android:layout_marginRight="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>