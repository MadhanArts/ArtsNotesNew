<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checklist_add_item_title"

        android:text="Add Item"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/checklist_add_item_edittext"
        android:hint="Enter Item"

        app:layout_constraintStart_toStartOf="@+id/checklist_add_item_title"
        app:layout_constraintEnd_toEndOf="@+id/checklist_add_item_title"
        app:layout_constraintTop_toBottomOf="@+id/checklist_add_item_title"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checklist_add_item_save_button"
        android:text="save"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checklist_add_item_edittext"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checklist_add_item_cancel_button"

        android:layout_marginEnd="10dp"

        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"

        app:layout_constraintEnd_toStartOf="@+id/checklist_add_item_save_button"
        app:layout_constraintTop_toTopOf="@+id/checklist_add_item_save_button"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_add_item_save_button"

        android:text="cancel"


        android:layout_marginRight="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>